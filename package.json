{
  "name": "podcast-manager-in-progress",
  "private": true,
  "version": "1.0.0",
  "description": "React Itunes Podcast Manager App with react-query, tailwind, zustand, react-testing-library, vite, vitest, jest, msw, and test coverage.",
  "type": "module",
  "license": "MIT",
  "author": "maresqueta-code",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write --ignore-unknown",
    "checks": "yarn run lint && yarn run format && yarn run test",
    "checks:npm": "npm run lint && npm run format && npm run test",
    "build": "vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-query": "5.50.1",
    "dayjs": "1.11.11",
    "dompurify": "3.1.7",
    "html-react-parser": "5.1.16",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.24.1",
    "use-debounce": "10.0.1",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "5.50.1",
    "@testing-library/dom": "10.1.0",
    "@testing-library/jest-dom": "6.1.5",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.10.4",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitejs/plugin-react-swc": "3.5.0",
    "@vitest/coverage-v8": "1.0.4",
    "@vitest/ui": "1.6.0",
    "autoprefixer": "10.4.19",
    "clsx": "2.0.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest-dom": "5.1.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "eslint-plugin-tailwindcss": "3.17.4",
    "jsdom": "23.0.1",
    "msw": "0.28.1",
    "postcss": "8.4.39",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "3.4.13",
    "typescript": "5.2.2",
    "vite": "5.0.8",
    "vite-plugin-dts": "3.6.4",
    "vitest": "1.6.0"
  }
}
